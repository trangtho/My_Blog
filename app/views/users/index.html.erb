<h1>Sign in</h1>

<%= form_for :user, url: "/sign_in", method: :POST, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :username, style: "display: block", class: "form-label" %>
    <%= form.text_field :username, class: "form-control", placeholder: "Your username" %>
  </div>

  <div class="mb-3">
    <%= form.label :password, style: "display: block", class: "form-label" %>
    <%= form.password_field :password, class: "form-control", placeholder: "Your password" %>
  </div>

  <div>
    <%= form.submit "Sign in", class: "btn btn-primary" %>
  </div>
<% end %>

<br>

<div>
    <%= link_to "Sign up", "sign_up", class: "btn btn-primary" %>
</div>